{
  "name": "logicdrawer",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite --host --port 4000 --force",
    "test": "vitest",
    "dev:server": "cd server && npm run dev",
    "dev:all": "concurrently \"npm run dev\" \"npm run dev:server\"",
    "dev:network": "concurrently \"vite --host --port 4000 --force\" \"cd server && npm run dev\"",
    "build": "tsc -b && vite build --outDir dist",
    "lint": "eslint src --fix && npx tsc --noEmit",
    "format": "prettier --write \"**/*.{html,css,js,ts,json}\"",
    "format:check": "prettier --check \"**/*.{html,css,js,ts,json}\"",
    "preview": "vite preview --host",
    "server": "ts-node server/index.ts",
    "build:all": "npm run build && cd server && npm run build",
    "start": "cd server && npm start"
  },
  "devDependencies": {
    "@eslint/js": "^9.18.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/mongoose": "^5.11.96",
    "@types/node": "^22.13.14",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^8.2.2",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-import-resolver-typescript": "^3.7.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.2",
    "prettier": "^3.4.2",
    "prettier-plugin-tailwindcss": "^0.6.10",
    "ts-node": "^10.9.2",
    "typescript": "~5.6.2",
    "typescript-eslint": "^8.20.0",
    "vite": "^6.2.6",
    "vitest": "^3.1.1"
  },
  "dependencies": {
    "@google/genai": "^0.7.0",
    "@google/generative-ai": "^0.24.0",
    "@mistralai/mistralai": "^1.5.2",
    "axios": "^1.8.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^5.1.0",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.5.0",
    "hdl-js": "^0.0.72",
    "helmet": "^8.1.0",
    "hpp": "^0.2.3",
    "mongoose": "^8.2.0",
    "multer": "^1.4.5-lts.2",
    "xss-filters": "^1.2.7"
  }
}
